<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	
	<bean id="parenttriangle" class="org.asmod.spring.Triangle" abstract="true">
			<property name="points">
				<list merge="true">
					
				</list>
			</property>
	</bean>
	
	<!-- 
		- triangle1 will inherit parenttriangle and merge List collections, also applicable to other collections
		  -->
	<bean id="triangle1" class="org.asmod.spring.Triangle" parent="parenttriangle" >
		<property name="points">
				<list merge="true">
					<ref bean="pointB"/>
					<ref bean="pointC"/>
				</list>
			</property>
	</bean>
	
	<!-- 
		- tirangle2 will inherit the property of parenttriangle bean
			- only property pointA and pointB will be initialized -->
	<bean id="triangle2" class="org.asmod.spring.Triangle" parent="parenttriangle">
		<property name="pointB" ref="pointB" />
	</bean>
	
		<bean id="pointA" class="org.asmod.spring.Point" scope="prototype" >
			<property name="x" value="0" />
			<property name="y" value="0" />	
		</bean>			
		<bean id="pointB" class="org.asmod.spring.Point" >
			<property name="x" value="20" />
			<property name="y" value="0" />						
		</bean>			
		<bean id="pointC" class="org.asmod.spring.Point">
			<property name="x" value="-20" />
			<property name="y" value="0" />
		</bean>
</beans>
